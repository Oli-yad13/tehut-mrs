OPENMRS_MODULE_WEB_ADMIN=true
OPENMRS_DOCKER_ENV=docker
OPENMRS_JAVA_SERVER_OPTS=-Xmx2g -Xms1g
OPENMRS_JAVA_MEMORY_OPTS=-Xmx2g -Xms1g
